<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/transparent"
    android:layout_height="120dp"
    android:padding="5dp">

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/date_button"
        android:clickable="true"
        android:background="@android:color/transparent">

    </Button>

        <TextView
            android:id="@+id/text_view_calendar_day_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/linear_events_counter"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_calendar_day_date">

            <TextView
                android:id="@+id/text_view_number_of_events"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="8sp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/image_view_calendar_day_icon"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="15dp"/>

        </LinearLayout>

</RelativeLayout>