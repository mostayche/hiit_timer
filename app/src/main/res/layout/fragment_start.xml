<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/start_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_three"
    android:keepScreenOn="true">

    <TextView
        android:id="@+id/textView_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/counter_window"
        android:layout_marginBottom="20sp"
        android:fontFamily="@font/counter_font"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="50sp"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/counter_window"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/counter_font"
        android:text="START"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="80sp"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/exercise_counter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/counter_window"
        android:fontFamily="@font/counter_font"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="20sp"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/exercise_counter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp">

        <Button
            android:id="@+id/replay_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/counter_window"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_replay_black_24dp" />

        <Button
            android:id="@+id/start_button"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/counter_window"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_play_arrow_black_24dp" />

        <Button
            android:id="@+id/pause_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignRight="@id/start_button"
            android:background="@drawable/ic_pause_black_24dp" />


    </LinearLayout>


</RelativeLayout>